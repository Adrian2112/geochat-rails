@import 'nib'

#header
  .logo
    h1
      display: inline
    a, a:visited
      text-decoration: none

  .menu
    float: right

    .username
      margin: 0 10px

#flash

  & div
    padding: 15px
    margin: 20px 0
    border-radius: 10px

  .error
    background-color: #FFCCCC;
    border: 3px solid #CC6666

  .notice
    background: green


div#messages
  border: solid 1px #E6E6E6
  border-radius: 10px
  padding: 10px
  height: 300px
  overflow: auto

  .message
    min-height: 35px
    margin: 0
    padding: 10px 0 0 0

    &:nth-child(even)
      background: none repeat scroll 0 0 #F8F8F8
      border-radius: 10px

    img.photo
      float: left
      width: 30px
      border-radius: 5px

    img.mayor
      height: 17px
      left: -40px
      position: relative
      top: -9px
      width: 18px

    span.mayor-placeholder
      padding: 0 18px 0 0

    span.author
      margin: 0 0 0 -10px
      padding: 0 10px 0 0
      font-weight: bold


abbr.timeago
  float: right
  font-size: 70%
  color: #A3A3A3

form#new_message
  .text
    width: 100%
    margin: 10px 0
